{
  "name": "@proc7ts/seep",
  "version": "0.1.0",
  "description": "Tools for implementing Data Seep Pattern",
  "keywords": [
    "data-faucet",
    "data-seep",
    "data-sink"
  ],
  "homepage": "https://github.com/proc7ts/seep",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:proc7ts/seep.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/proc7ts/seep/issues"
  },
  "type": "module",
  "types": "./dist/seep.d.ts",
  "exports": {
    "types": "./dist/seep.d.ts",
    "default": "./dist/seep.js"
  },
  "dependencies": {
    "@proc7ts/async": "^1.0.0-pre.4",
    "@proc7ts/primitives": "^4.0.0-pre.2",
    "@proc7ts/supply": "^2.0.0-pre.12"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.2",
    "@run-z/eslint-config": "^3.2.2",
    "@run-z/prettier-config": "^2.0.0",
    "@run-z/project-config": "^0.6.1",
    "@swc/core": "^1.2.246",
    "@swc/jest": "^0.2.22",
    "@types/node": "^16.11.56",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.23.0",
    "eslint-plugin-jest": "^27.0.1",
    "gh-pages": "^4.0.0",
    "jest": "^29.0.2",
    "jest-junit": "^14.0.1",
    "jest-mock": "^29.0.2",
    "prettier": "^2.7.1",
    "prettier-eslint-cli": "^7.1.0",
    "rollup": "^2.79.0",
    "rollup-plugin-flat-dts": "^1.7.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.33.0",
    "run-z": "=1.10.0-bootstrap",
    "ts-jest": "29.0.0-next.1",
    "tslib": "^2.4.0",
    "typedoc": "^0.23.14",
    "typescript": "^4.8.2"
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "bootstrap": "rollup -c",
    "build": "run-z +z bootstrap",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then clean-z",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "format": "run-z +z --then prettier-eslint --write --include-dot-files \"src/**/*.*\" \"*.{js,cjs,mjs,json,md}\"",
    "lint": "run-z +z --then eslint .",
    "test": "run-z +z env:NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" --then jest",
    "z": "run-z +cmd:rollup,+cmd:typedoc,+cmd:eslint,+cmd:jest"
  }
}
